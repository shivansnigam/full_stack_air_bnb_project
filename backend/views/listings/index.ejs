<style>
    /* Main Filters Container */
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center; /* Center the filters */
        margin-bottom: 2rem; /* Space below the filters */
        overflow-x: auto; /* Allow horizontal scrolling */
        padding: 10px 0; /* Add padding for the slider */
    }

    .filter {
        text-align: center;
        margin: 1rem; /* Add uniform margin */
        opacity: 0.7;
        transition: opacity 0.3s; /* Smooth opacity transition */
        padding: 0.5rem; /* Add padding for better touch targets */
        border: 1px solid transparent; /* Default border for modern look */
        border-radius: 1rem; /* Rounded corners */
        background-color: #f8f9fa; /* Light background for visibility */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
        border: 1px solid #007bff; /* Highlight border on hover */
        background-color: #e2e6ea; /* Darken background on hover */
    }

    .filter div {
        font-size: 2rem; /* Increase icon size */
        color: #007bff; /* Icon color */
        transition: transform 0.3s; /* Smooth transition for scaling effect */
    }

    .filter:hover div {
        transform: scale(1.2); /* Scale icon on hover */
    }

    .filter p {
        font-size: 0.9rem; /* Adjust text size */
        margin-top: 0.5rem; /* Space between icon and text */
    }

    .tax-info {
        display: none;
    }

    .tax-switch {
         
         
        height: 3.25rem;
        padding: 1rem;
        margin-left: 1rem; /* Adjust margin for better spacing */
        display: flex;
        align-items: center;
        
    }

    /* Card Layout */
    .listing-card {
        margin: 0 5px;
    }

    .listing-card:hover {
        transform: scale(1.05); /* Slight zoom effect on hover */
    }

    /* Responsive Styles */
    .row {
        margin: 0; /* Remove margin from rows */
    }

    /* Adjust card size for different screen sizes */
    @media (max-width: 576px) {
    .filter div {
        font-size: 1.5rem; /* Mobile screens ke liye icon size ko chhota kar do */
    }

    .filter p {
        font-size: 0.7rem; /* Mobile screens ke liye text size bhi thoda chhota kar do */
    }
}

    @media (max-width: 576px) {
        .tax-switch {
            margin-top: 70px;
         margin-left: -1rem; /* Adjust margin for better spacing */
         
     }
        .listing-card {
            width: 90%; /* Full width on extra small screens */
            margin: 0 auto; /* Center the card */
        }

        /* Filters display horizontally on mobile */
        #filters {
            flex-direction: row; /* Change to row for mobile */
            justify-content: flex-start; /* Align items to the start */
            flex-wrap: nowrap;
            
        }

        .filter {
            flex: 0 0 auto; /* Prevent filters from stretching */
        }
    }

    @media (min-width: 576px) and (max-width: 768px) {
        .listing-card {
            width: 80%; /* Slightly smaller on small screens */
            margin: 0 auto; /* Center the card */
        }
    }

    @media (min-width: 768px) and (max-width: 992px) {
        .listing-card {
            width: 45%; /* Two columns on medium screens */
        }
    }

    @media (min-width: 992px) {
        .listing-card {
            width: 30%; /* Three columns on large screens */
        }
    }

    @media (min-width: 1200px) {
        .listing-card {
            width: 22%; /* Four columns on extra large screens */
        }
    }

    @media (min-width: 1400px) {
        .listing-card {
            width: 100%; /* Five columns on extra extra large screens */
        }
    }
    .scroll-button {
    background-color: #007bff; /* Button background color */
    color: white; /* Button text color */
    border: none; /* No border */
    border-radius: 50%; /* Circular buttons */
    width: 30px; /* Width of buttons */
    height: 30px; /* Height of buttons */
    cursor: pointer; /* Pointer cursor on hover */
    position: absolute; /* Position absolute to place it correctly */
    z-index: 1; /* Ensure buttons are above other elements */
}

.scroll-button.left {
    left: 10px; /* Position left button */
    top: 40%; /* Center vertically */
    transform: translateY(-50%); /* Adjust position */
}

.scroll-button.right {
    right: 10px; /* Position right button */
    top: 40%; /* Center vertically */
    transform: translateY(-50%); /* Adjust position */
}

/* Hide scroll buttons on larger screens */
@media (min-width: 768px) { /* Adjust this value based on your needs */
    .scroll-button {
        display: none; /* Hide scroll buttons */
    }
}

    /* Add a glowing animation effect to the toggle button */
@keyframes glowing {
    0% {
        background-color: #007bff;
        box-shadow: 0 0 5px #007bff;
    }
    50% {
        background-color: #00dbde;
        box-shadow: 0 0 20px #00dbde;
    }
    100% {
        background-color: #007bff;
        box-shadow: 0 0 5px #007bff;
    }
}

/* Apply the animation to the toggle switch */
.tax-switch .form-check-input {
    animation: glowing 2s infinite; /* Runs the animation continuously */
    border-color: #007bff;
    box-shadow: 0 0 10px #007bff;
    transition: background-color 0.3s ease;
}

/* Optional: Add hover effect to intensify the glow when hovered */
.tax-switch .form-check-input:hover {
    background-color: #00dbde; /* Changes the background color on hover */
    box-shadow: 0 0 30px #00dbde;
}

</style>


