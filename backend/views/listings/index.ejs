<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card mt-3" style="position: relative; width: 300px; height: 400px; background-color: #000; display: flex; flex-direction: column; justify-content: end; padding: 12px; gap: 12px; border-radius: 8px; cursor: pointer; color: white;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 250px; border-radius: 8px;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="heading"><b><%= listing.title %></b></p>
                    <p>&#8377; <%= listing.price.toLocaleString("en-IN") %> /Night</p>
                    <i class="tax-info" style="display: none;">&nbsp; &nbsp; +18% GST</i>
                </div>

                <style>
                    .card::before {
                        content: '';
                        position: absolute;
                        inset: 0;
                        left: -5px;
                        margin: auto;
                        width: 310px; /* Updated width for the gradient effect */
                        height: 410px; /* Updated height for the gradient effect */
                        border-radius: 10px;
                        background: linear-gradient(-45deg, #e81cff 0%, #40c9ff 100%);
                        z-index: -10;
                        pointer-events: none;
                        transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                    }

                    .card::after {
                        content: "";
                        z-index: -1;
                        position: absolute;
                        inset: 0;
                        background: linear-gradient(-45deg, #fc00ff 0%, #00dbde 100%);
                        transform: translate3d(0, 0, 0) scale(0.95);
                        filter: blur(20px);
                    }

                    .card:hover::after {
                        filter: blur(30px);
                    }

                    .card:hover::before {
                        transform: rotate(-90deg) scaleX(1.34) scaleY(0.77);
                    }
                </style>
            </div>
        </a>
    <% } %>
</div>
<script>
   function scrollFiltersLeft() {
        console.log("Scrolling left");
        document.getElementById("filters").scrollBy({ 
            top: 0, 
            left: -200, // Scroll left by 200px
            behavior: 'smooth' // Smooth scrolling
        });
    }

    function scrollFiltersRight() {
        console.log("Scrolling right");
        document.getElementById("filters").scrollBy({ 
            top: 0, 
            left: 200, // Scroll right by 200px
            behavior: 'smooth' // Smooth scrolling
        });
    }

    let taxswitch = document.getElementById("flexSwitchCheckDefault");
    taxswitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let i = 0; i < taxInfo.length; i++) {
            taxInfo[i].style.display = taxInfo[i].style.display === "none" ? "block" : "none";
        }
    });
</script>